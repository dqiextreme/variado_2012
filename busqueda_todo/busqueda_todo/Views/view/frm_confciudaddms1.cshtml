                                        <asp:BoundField DataField="cname" HeaderText="Ciudad T3">
                                            <ItemStyle HorizontalAlign="Left" Width="300px" />
                                        </asp:BoundField>
                                        <asp:BoundField DataField="cddn" HeaderText="Código DDN">
                                            <ItemStyle HorizontalAlign="Center" Width="200px" />
                                        </asp:BoundField>
                                        <asp:BoundField DataField="csigla" HeaderText="Siglas">
                                            <ItemStyle HorizontalAlign="Center" Width="200px" />
                                        </asp:BoundField>
                                        <asp:BoundField DataField="ccity" HeaderText="Código ciudad">
                                            <ItemStyle HorizontalAlign="Center" Width="200px" />
                                        </asp:BoundField>  
                                        <asp:BoundField DataField="cidnesdms_cium" HeaderText="Código ciudad nestlé">
                                            <ItemStyle HorizontalAlign="Center" Width="200px" />
