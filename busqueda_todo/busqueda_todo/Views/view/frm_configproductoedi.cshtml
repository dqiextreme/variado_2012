<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" >
<head runat="server">
<title>Configuración de producto - EDI</title>
<link rel="stylesheet" type="text/css" href="StyleSheet.css" />
<style type="text/css">
        
    .barra
    {
        height: 21px; 
        background-color: #bbd4f8; 
        border-left: #3b619c 1px solid;
        border-right: #3b619c 1px solid;
    }

    .titulo
    {
        padding:5px;
        font-family: Verdana;
        font-size: x-small;
        font-weight: bold;
        margin-bottom: 20px;
        background-color: #666666;
        color: White;
        text-align: center;
    }
    
    .celda_etiqueta
    {
        text-align:right;
        padding:5px;  
    }
    
    .celda_detalle
    {
        text-align:left;
        padding:5px;
    }
    
    .celda_lista
    {
        text-align: center;
        width: 650px;
    }
        
    .observacion
    {
        padding: 15px;
        font-family: Verdana;
        font-size: xx-small;
        font-weight: bold;
        color: #FF0000;
        text-align: center;
    }
    
    .separador
    {
        padding:5px;
    }

</style>
<script type="text/javascript">
                
    function _Mtd_Onload() {
        document.getElementById('progressBackgroundFilter1').style.display = "block";
    }
          
</script>
<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.js"></script>
<script type="text/javascript">

    $(document).ready(function() {

        $("#_Txt_Caja_Paletas").keypress(function(e) {
            if ((e.which != 8) && (e.which != 0) && (e.which < 48 || e.which > 57)) {
                return false;
            }
        });

        $("#_Txt_Cajas_Camada").keypress(function(e) {
            if ((e.which != 8) && (e.which != 0) && (e.which < 48 || e.which > 57)) {
                return false;
            }
        });

        $("#_Txt_Peso_Corrugado").keypress(function(e) {

            if ((e.which == 44) && ($("#_Txt_Peso_Corrugado").val().indexOf(',') != -1)) {
                return false;
            }


            if ((e.which != 8) && (e.which != 0) && (e.which < 48 || e.which > 57) && (e.which != 44)) {
                return false;
            }
            
        });

    });

</script>
</head>
<body onload="_Mtd_Onload();" class="cuerpo">
<center>
    <form id="FrmConfigGeneralEDI" runat="server">
    <asp:ScriptManager ID="Manejador" runat="server" EnableScriptGlobalization="True"
            EnableScriptLocalization="False">
    </asp:ScriptManager>
    <asp:UpdatePanel ID="_UP_Menu" runat="server">
        <ContentTemplate>
        <table style="width: 773px; height: 49px;" cellpadding="0" cellspacing="0">
            <tr>
                <td align="center">
                    <uc1:Menu ID="Menu1" runat="server" />
                </td>
            </tr>
            <tr>
                <td>
                    <table width="99.98%" class="barra">
                    <tr>
                    <td width="5">
                        <font face="Verdana" size="1"><strong><span>
                            <asp:ImageButton Style="cursor: default" ID="ImageButton1" runat="server" ImageUrl="image/separator.gif" />
                        </span></strong></font>
                    </td>
                    <td width="45">
                        <font face="Verdana" size="1"><strong><span>
                            <asp:UpdatePanel ID="MnuPrincipal" runat="server">
                                <ContentTemplate>
                                    <asp:ImageButton ID="_Btn_Nuevo" runat="server" ImageUrl="image/new.gif" 
                                        Enabled="False" />
                                    <asp:ImageButton ID="_Btn_Guardar" runat="server" ImageUrl="image/save.gif" 
                                        onclick="_Btn_Guardar_Click" style="height: 20px" />
                                </ContentTemplate>
                            </asp:UpdatePanel>
                        </span></strong></font>
                    </td>
                    <td width="10%">
                        <font face="Verdana" size="1"><strong><span>
                            <asp:ImageButton Style="cursor: default" ID="ImageButton6" runat="server" ImageUrl="image/separator.gif" />
                        </span></strong></font>
                        <uc2:CloseSession ID="CloseSession2" runat="server" />
                    </td>
                    <td style="text-align: right">
                        <uc3:Ctr_Usuario ID="Ctr_Usuario1" runat="server" />
                    </td>
                    </tr>                    
                    </table>
                </td>
            </tr>
            </table>
            </ContentTemplate> 
    </asp:UpdatePanel>
    <asp:UpdatePanel ID="_UP_Datos" runat="server" UpdateMode="Conditional">
        <ContentTemplate>
            <table style="width: 773px" cellpadding="0" cellspacing="0">
                <tr>
                    <td colspan="4" class="titulo">Configuración productos EDI Colgate</td>
                </tr>
                <tr>
                    <td colspan="4" class="separador"></td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_01" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt">Proveedor :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:DropDownList ID="_Cmb_Proveedor" runat="server" AutoPostBack="True" Enabled="False" 
                            OnSelectedIndexChanged="_Cmb_Proveedor_SelectedIndexChanged" Width="220px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" Font-Size="7pt" 
                            Height="16px">
                        </asp:DropDownList>
                    </td>
                    <td colspan="2" rowspan="3"></td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_02" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt">Grupo :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:DropDownList ID="_Cmb_Grupo" runat="server" AutoPostBack="True" 
                            OnSelectedIndexChanged="_Cmb_Grupo_SelectedIndexChanged" Width="220px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" Font-Size="7pt" 
                            Height="20px">
                        </asp:DropDownList>
                    </td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_03" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt">Sub-grupo :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:DropDownList ID="_Cmb_Subgrupo" runat="server" AutoPostBack="True" 
                            OnSelectedIndexChanged="_Cmb_Subgrupo_SelectedIndexChanged" Width="220px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" Font-Size="7pt">
                        </asp:DropDownList>
                    </td>
                </tr>
                <tr>
                    <td rowspan="8" class="celda_lista" colspan="2">
                        <asp:ListBox ID="_Lbox_Productos" runat="server" Height="266px" 
                            SelectionMode="Multiple" Width="300px" BackColor="Silver" 
                            Font-Names="Verdana" Font-Size="7pt" 
                            onselectedindexchanged="_Lbox_Productos_SelectedIndexChanged" 
                            AutoPostBack="True"></asp:ListBox>
                    </td>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_04" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt" Width="150px">Código del fabricante :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:TextBox ID="_Txt_Codigo_Fabricante" runat="server" Width="202px" 
                            BackColor="#CCCCCC" Font-Names="Verdana"  
                            Font-Size="7pt"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_05" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt" Width="150px">Cajas por paleta :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:TextBox ID="_Txt_Caja_Paletas" runat="server" Width="202px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" 
                            Font-Size="7pt"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_06" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt" Width="150px">Cajas por camada :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:TextBox ID="_Txt_Cajas_Camada" runat="server" Width="202px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" 
                            Font-Size="7pt"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_07" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt" Width="150px">Peso por corrugado (Kg) :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:TextBox ID="_Txt_Peso_Corrugado" runat="server" Width="202px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" 
                            Font-Size="7pt"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_08" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt" Width="170px">Contenido unidad de manejo 1 :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:TextBox ID="_Txt_Unidad_Manejo_1" runat="server" Width="202px" 
                            BackColor="#CCCCCC" Enabled="False" Font-Bold="True" Font-Names="Verdana" 
                            Font-Size="7pt"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_09" runat="server" 
                            Font-Names="Verdana" Font-Size="7pt" Width="150px">Código de barra de unidad :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:TextBox ID="_Txt_Codigo_Barra_Unidad" runat="server" Width="202px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" 
                            Font-Size="7pt"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td class="celda_etiqueta">
                        <asp:Label ID="_Lbl_10" runat="server" Font-Bold="True" 
                            Font-Names="Verdana" Font-Size="7pt" Height="16px" Width="223px">Código de barra de corrugado :</asp:Label>
                    </td>
                    <td class="celda_detalle">
                        <asp:TextBox ID="_Txt_Codigo_Barra_Corrugado" runat="server" Width="202px" 
                            BackColor="#CCCCCC" Font-Names="Verdana" 
                            Font-Size="7pt"></asp:TextBox>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="observacion">Recuerde que para guardar cualquier modificación debe utilizar el botón &quot;Guardar&quot; que se encuentra en la parte superior izquierda.</td>
                </tr>
            </table>
        </ContentTemplate>
    </asp:UpdatePanel>
    
    @*messagebox ----------------------------------------------------------------------------------------------------------------------*@
    <asp:Button runat="server" ID="_Btn_MessageBoxHidden" Style="display: none" />
    <ajaxToolkit:ModalPopupExtender runat="server" ID="_MPE_MessageBox" BehaviorID="_MPE_MessageBoxBehavior"
        TargetControlID="_Btn_MessageBoxHidden" PopupControlID="_Pnl_MessageBoxPopup"
        BackgroundCssClass="modalBackground" DropShadow="True" RepositionMode="RepositionOnWindowScroll">
    </ajaxToolkit:ModalPopupExtender>
    <asp:Panel runat="server" CssClass="modalPopup" ID="_Pnl_MessageBoxPopup" Style="display: none;padding: 10px" Width="700px">
        @*bandera 3*@
        <asp:Panel runat="Server" ID="_Pnl_MessageBox" Style="background-color: #FFFFFF; border: solid 1px Gray; color: Black; text-align: center;">
            <asp:UpdatePanel ID="_UP_MessageBox" runat="server">
                <ContentTemplate>
                    <table style="width: 100%;">
                        <tr valign="top">
                            <td>
                                <asp:Label ID="_Lbl_MessageBox" runat="server" Font-Names="Verdana" Font-Size="8pt"></asp:Label><br /><br />
                                <asp:Button ID="_Btn_MessageBoxAceptar" runat="server" BorderColor="Black" BorderStyle="Solid" BorderWidth="1px" Font-Names="Verdana" Font-Size="8pt" Text="Aceptar" OnClick="_Btn_MessageBoxAceptar_Click" Style="height: 19px" />
                            </td>
                        </tr>
                    </table>
                </ContentTemplate>
            </asp:UpdatePanel>
        </asp:Panel>
    </asp:Panel>
    @*messagebox ----------------------------------------------------------------------------------------------------------------------*@
    

    @*update progress ----------------------------------------------------------------------------------------------------------------------*@
    <div style="position: fixed; z-index: 100600; font-family: verdana; font-size: 9px;
        font-weight: bold; background-color: #FFFFFF;">
        <asp:UpdateProgress ID="_UPR_Principal" runat="server" AssociatedUpdatePanelID="_UP_Datos"
            DisplayAfter="1000">
            <ProgressTemplate>
                <center>
                    <div id="progressBackgroundFilter1" style="display: none" class="progressBackgroundFilter">
                    </div>
                    <div id="processMessage" style="border: 1px solid #000000 left: 34%; top: 34%">
                        <img alt="Procesando" src="images/animated_loading.gif"><br>
                        Procesando. Por favor espere...
                    </div>
                </center>
            </ProgressTemplate>
        </asp:UpdateProgress>
    </div>
    @*update progress ----------------------------------------------------------------------------------------------------------------------*@
    
    </form>
</center>
</body>
</html>
